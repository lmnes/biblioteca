@model BibliotecaVMC.Models.Livro

@{
    ViewData["Title"] = "Excluir Livro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Excluir Livro</h1>

<h3>Tem certeza que deseja excluir este livro?</h3>
<div>
    <h4>@Model.Titulo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>
        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@Model.Autor</dd>
        <dt class="col-sm-2">Categoria</dt>
        <dd class="col-sm-10">@Model.Categoria</dd>
        <dt class="col-sm-2">Ano de Publicação</dt>
        <dd class="col-sm-10">@Model.AnoPublicacao</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>