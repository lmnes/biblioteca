@model BibliotecaVMC.Models.Livro

@{
    ViewData["Title"] = "Detalhes do Livro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes do Livro</h1>

<div>
    <h4>@Model.Titulo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>
        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@Model.Autor</dd>
        <dt class="col-sm-2">Categoria</dt>
        <dd class="col-sm-10">@Model.Categoria</dd>
        <dt class="col-sm-2">Ano de Publicação</dt>
        <dd class="col-sm-10">@Model.AnoPublicacao</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>